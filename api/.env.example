# Environment Configuration

# Service URLs (Docker containers communicate via service names)
OLLAMA_URL=http://ollama:11434
QDRANT_URL=http://qdrant:6333

# API Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=60000

# Ingestion Token (for protected endpoints)
INGESTION_TOKEN=your-secret-token-change-in-production

# WordPress Domain (for CORS)
WORDPRESS_DOMAIN=http://localhost

# LLM Provider Configuration
# Options: 'ollama' or 'groq'
LLM_PROVIDER=groq

# Ollama Configuration (for local models)
LLM_MODEL=qwen2.5:0.5b
EMBEDDING_MODEL=nomic-embed-text

# Groq Configuration (for cloud API)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

CHAT_TOP_K=5

# Webhook Configuration
WEBHOOK_SECRET=your-random-webhook-secret-change-this

# Email Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_ON_SUCCESS=false
ALERT_EMAIL_TO=admin@yourdomain.com

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Server Info (for alert emails)
SERVER_NAME=Production Server
